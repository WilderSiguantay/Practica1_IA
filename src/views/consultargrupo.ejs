<%- include("partials/header")  %>
<div class="jumbotron">
    <h1>Consultar Estudiante Por Grupo</h1>

</div>

<div class="col-8">
    <form method="post" action="/consultarGrupo">
       
        <div class="form-group row">
            <div class="col-4">
                <label for="grupo">Grupo</label>
                <input required id="grupo" placeholder="Ingresar # grupo" class="form-control" type="number" name="grupo">
            </div>
            
        </div>
        <div class="form-group">
            <button class="btn btn-success">Consultar</button>
            &nbsp;<a href="/" class="btn btn-primary">Volver</a>
        </div>
    </form>
</div>

<div class="col-12">
    <table class="table table-dark">
        <thead>
          <tr>
            <th scope="col">Nombre</th>
            <th scope="col">Carne</th>
            <th scope="col">DPI</th>
            <th scope="col">Correo</th>
            <th scope="col">Semestre</th>
            <th scope="col">AÃ±o</th>
            <th scope="col"># Grupo</th>
          </tr>
        </thead>
        <tbody>
            <% if (privados.length > 0){%>

            <% privados.forEach(privado => { %>
                <tr>
                    <td><%= privado.nombre %></td>
                    <td><%= privado.carne %></td>
                    <td><%= privado.dpi %></td>
                    <td><%= privado.correo %></td>
                    <td><%= privado.semestre %></td>
                    <td><%= privado.anio %></td>
                    <td><%= privado.numerogrupo %></td>
                    
                </tr>
                <% })%>
            <%} else{%>
              
                <td>Sin datos</td>
                <td>Sin datos</td>
                <td>Sin datos</td>
                <td>Sin datos</td>
                <td>Sin datos</td>
                <td>Sin datos</td>
                <td>Sin datos</td>
            <%}%>
        </tbody>
      </table>
</div>


<!--Fin tabla estudiantes-->
<%- include("partials/footer")  %>
